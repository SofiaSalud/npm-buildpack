#!/usr/bin/env bash
# bin/compile <build-dir> <cache-dir> <env-dir>

set -o errexit    # always exit on error
set -o pipefail   # don't ignore exit codes when piping output
set -o nounset    # fail on unset variables

BUILD_DIR=${1:-}
CACHE_DIR=${2:-}
ENV_DIR=${3:-}
BP_DIR=$(cd $(dirname ${0:-}); cd ..; pwd)

source $BP_DIR/lib/environment.sh
export_env_dir "$ENV_DIR"

echo "Creating .npmrc"
echo "" >> $BUILD_DIR/.npmrc
echo "//registry.npmjs.org/:_authToken=$NPM_AUTH_TOKEN" >> $BUILD_DIR/.npmrc
echo "//registry.yarnpkg.com/:_authToken=$NPM_AUTH_TOKEN" >> $BUILD_DIR/.npmrc
echo "registry=https://registry.npmjs.org" >> $BUILD_DIR/.npmrc

echo "Creating .yarnrc"
echo "" >> $BUILD_DIR/.yarnrc
echo "registry \"https://registry.npmjs.org\"" >> $BUILD_DIR/.yarnrc

if [ -d "$BUILD_DIR/packages" ]; then
  sed -ie 's,registry.yarnpkg.com/@sofia,registry.npmjs.org/@sofia,' $BUILD_DIR/$APP_BASE/yarn.lock
else
  sed -ie 's,registry.yarnpkg.com/@sofia,registry.npmjs.org/@sofia,' $BUILD_DIR/yarn.lock
fi
